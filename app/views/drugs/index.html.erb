   <h7>Drugs</h7>

<%= form_tag drugs_path, :method => 'get' do %>
<table border="1" bordercolor="#000000" style="background-color:#CCCC99" width="100%" cellpadding="1" cellspacing="1">
<tr>
<td style="width:200px;height:10px;"><h7> Search by drugs</h7></td><td><%= text_field_tag :search, params[:search], :size =>40 %></td><td>    <%= submit_tag "search", :name => nil %>   </td>
</tr>
</table>
<% end %>
</br>

<table border="1" bordercolor="#000000" style="background-color:#F7F8E0" width="100%" cellpadding="3" cellspacing="1">
  <tr>
    <th>Database</th>
    <th>Drug name</th>
    <th>Drug amount</th>
    <th>Drug price</th>
    <th>Weapons</th>
  </tr>

<% @drugs.each do |drug| %>
  <tr>
    <td><%= link_to drug.database_id, drug %></td>
    <td><%= link_to  drug.drug_name, drug %></td>
    <td><%= link_to  drug.drug_amount, drug %></td>
    <td><%= link_to  drug.drug_price, drug %></td>
    <td><%= link_to  drug.weapons, drug %></td>

  </tr>
<% end %>
</table>
     
        
