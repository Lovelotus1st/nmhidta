<h7>Listing vehicles</h7>

<table>
  <tr>
    <th>Database</th>
    <th>Make</th>
    <th>Model</th>
    <th>Year</th>
    <th>Lic plate</th>
    <th>State</th>
    <th>Color</th>
    <th>Registered owner</th>
    <th>Note</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @vehicles.each do |vehicle| %>
  <tr>
    <td><%= vehicle.database_id %></td>
    <td><%= vehicle.make %></td>
    <td><%= vehicle.model %></td>
    <td><%= vehicle.year %></td>
    <td><%= vehicle.lic_plate %></td>
    <td><%= vehicle.state %></td>
    <td><%= vehicle.color %></td>
    <td><%= vehicle.registered_owner %></td>
    <td><%= vehicle.note %></td>
    <td><%= link_to 'Show', vehicle %></td>
    <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
    <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

